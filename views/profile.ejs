<% include("./partials/head") %>

<!-- Header -->
<% if (locals.user != undefined) {%>
	<%- include("./partials/headerLogueado") %> 
<% } else {%>
	<%- include("./partials/headerNoLogueado") %>
<% } %>

<section class="info-usuario container products-wrapper">
	<div class="row">
		<div class="img-container offset-3 col-2">
			<img src= <%= usuario.fotoPerfil %> alt="foto de perfil" class="foto-perfil">
		</div>
		<div class= "formularios"class="data-container col-6">
			<div class="d-flex align-items-center ">
				<h1 class="main-title"> <%= usuario.nombre %> 
					<a href="/users/profile-edit">
						<i class="fas fa-cog"></i>
					</a>
				</h1>
				<a class="btn mt-3 ml-4" href="/users/profile-edit">SEGUIR</a>
			</div>
			<div>
				<ul class="">
					<li> <%= usuario.email %></li>
					<li>8 productos</li>
					<li>200 seguidores</li>
					<li>300 comentarios</li>
				</ul>
			</div>
		</div>
	</div>
</section>

