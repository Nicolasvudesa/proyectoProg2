<%- include("./partials/head") %>

<% if (locals.user != undefined) {%>
	<%- include("./partials/headerLogueado") %> 
<% } else {%>
	<%- include("./partials/headerNoLogueado") %>
<% } %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% if (resultados.length == 0) { %>
				<h3 class = "formularios">No hay resultados para la busqueda</h3>
			<% }else{ %>
				<% for(let i=0; i<resultados.length; i++) {%>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/id/<%=resultados[i].id %>">
								<figure class="product-box_image">
									<img src= "../images/productos/<%=resultados[i].imagen%>" >
								</figure>
								<article class="product-box_data">
									<h2><%= resultados[i].producto %></h2>
									<p><%= resultados[i].descripcion %></p>	
									<p>Publicado por: <a href="/users/profile/<%=resultados[i].idUsuario%>"><%= resultados[i].usuarios.nombre %></a></p>
								</article>
							</a>
						</section>*3
					</div>
				<%}%>
			<%}%>

<%- include("./partials/footer") %>
	