<%- include("./partials/head") %>

<!-- Header -->
<% if (locals.user != undefined) {%>
    <%- include("./partials/headerLogueado") %> 
<% } else {%>
    <%- include("./partials/headerNoLogueado") %>
<% } %>
<!-- Novedades -->
<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Registrate</h2>
        </div>
<section class = "formularios">

    <form method="POST" action="/users/registrate" enctype="multipart/form-data">
        <% if (locals.errors) {%>
            <p style="color: red"><%= errors.message%></p> 
        <% } %>
       
        <div>
            <label>Mail:</label>
            <input type="email" name="mail" value="">
        </div>

        <div>
            <label>Usuario:</label>
            <input type="text" name="usuario" value="">
        </div>

        <div>
            <label>Ingresa la contraseña:</label>
            <input type="password" name="contra" value="">
        </div>

        <div>
            <label>DNI</label>
            <input type="text" name="dni" value="">
        </div>

        <div>
        <label>¿Cuando naciste?</label>
        <input type="date" name="edad" value="">
        </div>

        <div>
            <input type="submit" value="Registrate">
        </div>
    </form>
</section>
<%- include("./partials/footer") %>