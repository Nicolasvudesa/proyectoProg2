<%- include("./partials/head") %>

<% if (locals.user != undefined) {%>
	<%- include("./partials/headerLogueado") %> 
<% } else {%>
	<%- include("./partials/headerNoLogueado") %>
<% } %>

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>

			<% if (resultados.length == 0) { %>
				<h3 class = "formularios">No hay resultados para su criterio de búsqueda</h3>
			<% }else{ %>
				<% for(let i=0; i<resultados.length; i++) {%>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/users/profile/<%=resultados[i].id %>">
								<figure class="product-box_image">
									<img src= "<%=resultados[i].fotoPerfil%>" >
								</figure>
								<article class="product-box_data">
									<h2><%= resultados[i].nombre %></h2>
									<p><%= resultados[i].email %></p>	
								</article>
							</a>
						</section>
					</div>
				<%}%>
			<%}%>

<%- include("./partials/footer") %>