<%- include("./partials/head") %>


<% if (locals.user != undefined) {%>
	<%- include("./partials/headerLogueado") %> 
<% } else {%>
	<%- include("./partials/headerNoLogueado") %>
<% } %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Nuestros modelos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for(let i=0; i<productos.length; i++) {%>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detalle/<%=productos[i].id %>">
						<figure class="product-box_image">
							<img src= "<%=productos[i].imagen%>" alt="">
						</figure>
						<article class="product-box_data">
							<h2><%= productos[i].producto %></h2>
							<p><%= productos[i].descripcion %></p>
							<p>Publicado por: <a href="/users/profile/<%=productos[i].idUsuario%> "><%= productos[i].usuarios.nombre %></a></p>
						</article>
					</a>
				</section>
			</div>
			<%}%>
	
	
			
	<!-- /Novedades -->
	<!-- Más comentados -->
	
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include("./partials/footer") %>
	
</body>	
</html>